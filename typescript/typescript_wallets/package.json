{
    "name": "@freckleface/typescript-wallets",
    "version": "0.0.1",
    "description": "A small library that simplifies reading wallet files, including wallet.json and private.key. Primarily built for Golem DB but should work elesewhere.",
    "license": "ISC",
    "author": "",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/frecklefacelabs/typescript_wallets.git"
    },
    "homepage": "https://github.com/frecklefacelabs/typescript_wallets",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "directories": {
        "test": "test"
    },
    "keywords": [
        "typescript",
        "wallet",
        "ethereum",
        "golem-base"
    ],
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "start": "node dist/index.js",
        "build-and-start": "npm run build && npm run start",
        "dev": "ts-node src/index.ts",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "eslint \"src/**/*.ts\" --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "prepare": "npm run build"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@ethereumjs/wallet": "^10.0.0",
        "@folder/xdg": "^4.0.1",
        "dotenv": "^17.2.1",
        "ethers": "^6.15.0",
        "golem-base-sdk": "^0.1.16",
        "tslib": "^2.8.1",
        "xdg-app-paths": "^8.3.0",
        "xdg-portable": "10.6.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^24.0.13",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@typescript-eslint/parser": "^8.39.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "jest": "^29.7.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    }
}
